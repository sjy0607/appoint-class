.tab{
  border-radius: 50rpx;
  padding:18rpx 34rpx;
  font-size: 24rpx;
  margin-right:24rpx ;
}
.rooms{
  position: relative;
  height:297rpx;
  margin:24rpx 0;
  border-radius: 30rpx;
  padding:24rpx;
}
.max{
  background-color: #333333 ;
}
.middle{
